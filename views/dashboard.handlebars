{{#each posts as |post|}}
  <div>
    <div class="postBox">
      <div class="postTitle"><h3>{{post.title}}</h1><h9>Posted by
          {{post.user.username}}
          on
          {{format_date createdAt}}</h9></div>
      <div><p>{{post.body}}</p></div>
    </div>
  </div>
{{/each}}

<div id="newpostBox">
  <a href="/createNewPost">
    <button id="newpostBtn" type="button">+ New Post</button></a>
</div>
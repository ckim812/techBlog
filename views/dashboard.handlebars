{{#each posts as |post|}}
  <div class="row align-center mb-5">
    <div class="col-md-6">
      <div><h1>{{post.title}}</h1>
        <h5>{{post.user_id}}</h5></div>
      <div><p>{{post.body}}</p></div>
    </div>
  </div>
{{/each}}

<div id="newpostBox">
  <a href="/createNewPost">
    <button id="newpostBtn" type="button">+ New Post</button></a>
</div>